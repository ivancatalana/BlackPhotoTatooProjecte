<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UploadPhotoFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/selected_photo_thumbnail"
            android:layout_width="190dp"
            android:layout_height="245dp"
            android:background="@drawable/white_background_with_texture"
            android:scaleType="centerCrop"
            android:src="@drawable/iconphotpedit"
            app:layout_constraintBottom_toTopOf="@+id/gridLayout"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.503"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <GridLayout
            android:id="@+id/gridLayout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="30dp"
            android:columnCount="2"
            android:rowCount="2"
            app:layout_constraintBottom_toTopOf="@+id/view13"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <Button
                android:id="@+id/buttonAiMessages"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_margin="5dp"
                android:background="@drawable/round_button"
                android:backgroundTint="#19BFA2A2"
                android:text="Ai messages"
                tools:background="#95FFFFFF" />

            <Button
                android:id="@+id/effectButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_margin="5dp"
                android:background="@drawable/round_button"
                android:text="Effects"
                tools:background="#95FFFFFF" />

            <Button
                android:id="@+id/chatButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_margin="5dp"
                android:background="@drawable/round_button"
                android:backgroundTint="#19BFA2A2"
                android:text="AI chat"
                tools:background="#95FFFFFF" />

            <Button
                android:id="@+id/select_photo_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_margin="5dp"
                android:background="@drawable/round_button"
                android:backgroundTint="#19BFA2A2"
                android:text="Select File"
                tools:background="#95FFFFFF" />

        </GridLayout>

        <Button
            android:id="@+id/switch_to_bottom2_button"
            android:layout_width="77dp"
            android:layout_height="50dp"
            android:text="Edit selected image"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/nuevaPublicacionButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            android:text="pub"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/switch_to_bottom2_button" />

        <Button
            android:id="@+id/discoverButton"
            android:layout_width="70dp"
            android:layout_height="44dp"
            android:text="disc"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/view13"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/chatButtonPrueba"
            android:layout_width="115dp"
            android:layout_height="46dp"
            android:text="chatList"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/discoverButton" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>
