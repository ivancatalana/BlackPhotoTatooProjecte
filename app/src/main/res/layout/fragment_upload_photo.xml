<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UploadPhotoFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <ImageView
            android:id="@+id/selected_photo_thumbnail"
            android:layout_width="298dp"
            android:layout_height="376dp"
            android:layout_marginStart="28dp"
            android:scaleType="centerCrop"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/effectButton"
            app:layout_constraintVertical_bias="0.589" />

        <Button
            android:id="@+id/switch_to_bottom2_button"
            android:layout_width="156dp"
            android:layout_height="56dp"
            android:layout_marginTop="8dp"
            android:text="Edit selected image"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/select_photo_button" />

        <Button
            android:id="@+id/select_photo_button"
            android:layout_width="163dp"
            android:layout_height="46dp"
            android:text="Select File"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.023" />

        <Button
            android:id="@+id/effectButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Effects"
            app:layout_constraintEnd_toStartOf="@+id/discoverButton"
            app:layout_constraintStart_toEndOf="@+id/nuevaPublicacionButton"
            app:layout_constraintTop_toBottomOf="@+id/switch_to_bottom2_button" />

        <Button
            android:id="@+id/nuevaPublicacionButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="pub"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/switch_to_bottom2_button" />

        <Button
            android:id="@+id/discoverButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="disc"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/switch_to_bottom2_button" />

        <Button
            android:id="@+id/chatButton"
            android:layout_width="91dp"
            android:layout_height="51dp"
            android:text="AI chat"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/select_photo_button" />

        <Button
            android:id="@+id/buttonAiMessages"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:text="Ai messages"
            app:layout_constraintEnd_toStartOf="@+id/chatButton"
            app:layout_constraintStart_toEndOf="@+id/switch_to_bottom2_button"
            app:layout_constraintTop_toBottomOf="@+id/select_photo_button" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>