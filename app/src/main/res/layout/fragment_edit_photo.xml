<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/guardarButton"
        android:layout_width="113dp"
        android:layout_height="133dp"
        android:layout_marginLeft="-35dp"
        android:layout_marginTop="-50dp"
        android:background="#00000000"
        android:text="↶"
        android:textColor="#050505"
        android:textSize="50sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/menuButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Menú"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/photo_image_view"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        app:layout_constraintBottom_toTopOf="@+id/seekBarTextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.53"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/guardarButton"
        app:layout_goneMarginBottom="15dp" />

    <TextView
        android:id="@+id/progressSeekbarTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/rocksalt"
        android:text="50"
        app:layout_constraintBottom_toTopOf="@+id/adjustSeekBar"
        app:layout_constraintEnd_toEndOf="parent" />

    <SeekBar
        android:id="@+id/adjustSeekBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:progressDrawable="@drawable/my_seekbar_progress"
        android:thumb="@drawable/my_seekbar_thumb"
        android:max="100"
        android:progress="50"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/seekBarTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/rock_salt"
        android:text="select an adjust"
        app:layout_constraintBottom_toTopOf="@+id/adjustSeekBar"
        app:layout_constraintStart_toStartOf="parent" />



    <TableRow
        android:layout_width="match_parent"
        android:layout_height="149dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:id="@+id/buttonfilter1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bordes_redondos"
            android:text="filter1"
            android:textColor="#433814"
            android:textSize="12sp" />

        <Button
            android:id="@+id/buttonfilter2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bordes_redondos"
            android:text="filter2"
            android:textColor="#433814"
            android:textSize="12sp" />

        <Button
            android:id="@+id/button26"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bordes_redondos"
            android:text="filter3"
            android:textColor="#433814"
            android:textSize="12sp" />

        <Button
            android:id="@+id/button27"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bordes_redondos"
            android:text="filter4"
            android:textColor="#433814"
            android:textSize="12sp" />
    </TableRow>

</androidx.constraintlayout.widget.ConstraintLayout>
