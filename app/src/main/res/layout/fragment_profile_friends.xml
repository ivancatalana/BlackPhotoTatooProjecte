<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileFragment">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerProfile"
        android:layout_width="match_parent"
        android:layout_height="348dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/messageButton" />

    <ImageView
        android:id="@+id/friendProfileImageView"
        android:layout_width="113dp"
        android:layout_height="99dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/followers"
        android:layout_width="88dp"
        android:layout_height="32dp"
        android:fontFamily="@font/reem_kufi"
        android:gravity="center|top"
        android:text="00"
        android:textColor="@color/black"
        android:textSize="24sp"
        app:layout_constraintEnd_toStartOf="@+id/floowing"
        app:layout_constraintStart_toEndOf="@+id/publishedImages"
        app:layout_constraintTop_toBottomOf="@+id/nameProfile" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="98dp"
        android:layout_height="31dp"
        android:fontFamily="@font/reem_kufi"
        android:gravity="center"
        android:text="Followers"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintEnd_toStartOf="@+id/textView11"
        app:layout_constraintHorizontal_bias="0.514"
        app:layout_constraintStart_toEndOf="@+id/textView7"
        app:layout_constraintTop_toBottomOf="@+id/followers" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="73dp"
        android:layout_height="40dp"
        android:layout_marginBottom="30dp"
        android:fontFamily="@font/reem_kufi"
        android:gravity="center"
        android:text="Following"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/followButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/followButton" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="92dp"
        android:layout_height="43dp"
        android:layout_marginBottom="24dp"
        android:fontFamily="@font/reem_kufi"
        android:gravity="bottom"
        android:text="Published Images"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/followButton"
        app:layout_constraintStart_toStartOf="parent"
        tools:textColor="@color/black" />

    <TextView
        android:id="@+id/nameProfile"
        android:layout_width="216dp"
        android:layout_height="48dp"
        android:fontFamily="@font/rocksalt"
        android:gravity="center"
        android:text="UserName"
        android:textColor="@color/black"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/friendProfileImageView" />

    <TextView
        android:id="@+id/publishedImages"
        android:layout_width="67dp"
        android:layout_height="31dp"
        android:fontFamily="@font/reem_kufi"
        android:gravity="bottom|center"
        android:text="00"
        android:textColor="@color/black"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/textView7"
        app:layout_constraintEnd_toStartOf="@+id/nameProfile"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/floowing"
        android:layout_width="80dp"
        android:layout_height="34dp"
        android:fontFamily="@font/reem_kufi"
        android:gravity="center|top"
        android:text="00"
        android:textColor="@color/black"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/textView11"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/nameProfile"
        app:layout_constraintTop_toBottomOf="@+id/nameProfile" />


    <View
        android:id="@+id/separatorView"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="2dp"
        android:background="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/messageButton" />

    <Button
        android:id="@+id/followButton"
        android:layout_width="221dp"
        android:layout_height="37dp"
        android:text="Follow"
        android:textSize="8sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView10"
        tools:fontFamily="@font/rocksalt" />

    <Button
        android:id="@+id/messageButton"
        android:layout_width="295dp"
        android:layout_height="44dp"
        android:background="#0AFFFFFF"
        android:elevation="2dp"
        android:fontFamily="@font/rocksalt"
        android:shadowColor="@color/black"
        android:text="send message"
        android:textColor="@color/black"
        android:textSize="10sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/followButton" />



</androidx.constraintlayout.widget.ConstraintLayout>
